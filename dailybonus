# Реф начисление
$db->Query("SELECT user, referer_id FROM db_users_a WHERE id = '{$usid}' LIMIT 1");
$user_refdata = $db->FetchArray();
$refid = $user_refdata["referer_id"];

# Настройки бонусов
$bonus_min = 10;
$bonus_max = 100;

?>
